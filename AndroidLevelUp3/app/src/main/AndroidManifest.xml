<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="pl.daftacademy.androidlevelup">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme"
                 tools:ignore="GoogleAppIndexingWarning">

        <activity
                android:name=".view.home.HomeActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".view.fragment.transaction.FragmentTransactionActivity" />
        <activity android:name=".view.fragment.xml.FragmentXmlActivity" />
        <activity android:name=".view.navigation.bottom.BottomNavigationActivity" />
        <activity android:name=".view.navigation.drawer.NavigationDrawerActivity" />
        <activity android:name=".view.navigation.tabs.TabsActivity" />

    </application>
</manifest>
